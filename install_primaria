#!/bin/bash

# reset shell colors
tput init

# https://stackoverflow.com/questions/59895/how-to-get-the-source-directory-of-a-bash-script-from-within-the-script-itself
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do # resolve $SOURCE until the file is no longer a symlink
  PROJECT_ROOT="$( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$PROJECT_ROOT/$SOURCE" # if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
done
PROJECT_ROOT="$( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd )"

# Remover pasta install no diretório pai se existir (para evitar conflitos ao clonar)
PARENT_DIR="$(dirname "${PROJECT_ROOT}")"
INSTALL_DIR_PARENT="${PARENT_DIR}/install"
CURRENT_DIR="$(pwd)"
INSTALL_DIR_CURRENT="${CURRENT_DIR}/install"

# Remover pasta install no diretório pai (onde o git clone será executado)
if [[ -d "${INSTALL_DIR_PARENT}" ]] && [[ "${PROJECT_ROOT}" != "${INSTALL_DIR_PARENT}" ]]; then
  echo "Removendo pasta install existente em ${PARENT_DIR}..."
  sudo rm -rf "${INSTALL_DIR_PARENT}" 2>/dev/null || rm -rf "${INSTALL_DIR_PARENT}" 2>/dev/null || true
fi

# Remover pasta install no diretório atual (caso o script seja executado de fora)
if [[ -d "${INSTALL_DIR_CURRENT}" ]] && [[ "${PROJECT_ROOT}" != "${INSTALL_DIR_CURRENT}" ]]; then
  echo "Removendo pasta install existente em ${CURRENT_DIR}..."
  sudo rm -rf "${INSTALL_DIR_CURRENT}" 2>/dev/null || rm -rf "${INSTALL_DIR_CURRENT}" 2>/dev/null || true
fi

# required imports
source "${PROJECT_ROOT}"/variables/manifest.sh
source "${PROJECT_ROOT}"/utils/manifest.sh
source "${PROJECT_ROOT}"/lib/manifest.sh

# user configs file
if [[ ! -e "${PROJECT_ROOT}"/config ]]; then
  cat << EOF > "${PROJECT_ROOT}"/config
deploy_password=${deploy_password}
postgres_password=${postgres_password}
jwt_secret=${jwt_secret}
domain=${domain}
admin_email=${admin_email}
admin_password=${admin_password}
admin_name=${admin_name}
EOF
fi

# this file has passwords
sudo su - root <<EOF
chown root:root "${PROJECT_ROOT}"/config
chmod 700 "${PROJECT_ROOT}"/config
EOF
source "${PROJECT_ROOT}"/config

# interactive CLI
inquiry_options

echo ""
echo "=============================================="
echo "  INSTALAÇÃO CONECTA - LOGS EM TEMPO REAL"
echo "  Todos os comandos serão exibidos no terminal"
echo "=============================================="
echo ""

# dependencies related
system_update
system_node_install
system_postgresql_install
system_nginx_install
system_certbot_install

# system config
system_create_user
system_pm2_install
system_limits_setup
system_firewall_setup

# backend related (ordem: criar banco → escrever .env → deps → migrate → build → seed → pm2)
system_git_clone
backend_db_create
backend_set_env
backend_node_dependencies
backend_db_migrate
backend_node_build
backend_db_seed
backend_start_pm2

# frontend related
frontend_set_env
frontend_node_dependencies
frontend_node_build
frontend_start_pm2

# nginx: um server block com server_name do domínio (Certbot + / e /api)
system_nginx_primary_sites
# permissões para www-data ler frontend e media (evita 500)
system_nginx_app_permissions

# network related
system_nginx_conf
system_nginx_restart
system_certbot_setup

# verificação final
system_post_install_check
